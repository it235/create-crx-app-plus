{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2015", "DOM"],
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "index.ts"],
  "exclude": ["templates", "dist", "node_modules"]
}
